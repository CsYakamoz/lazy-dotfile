[init]
	defaultBranch = main

[user]
	name = user
	email = user@mail.gom

[branch]
	sort = -committerdate

[tag]
	sort = version:refname

[rerere]
	enabled = true
	autoupdate = true

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[commit]
	verbose = true

[pull]
	rebase = true

[merge]
	conflictstyle = zdiff3

[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true
	line-numbers = true

